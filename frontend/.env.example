# Frontend Environment Variables
# Copy this file to .env.local for local development
# or .env.production for production deployment

# API Configuration
REACT_APP_API_URL=https://api.menuiq.io

# For local development, use:
# REACT_APP_API_URL=http://localhost:8000

# Auth0 Configuration (if using Auth0)
# REACT_APP_AUTH0_DOMAIN=your-tenant.auth0.com
# REACT_APP_AUTH0_CLIENT_ID=your-client-id
# REACT_APP_AUTH0_AUDIENCE=https://api.menuiq.io
# REACT_APP_AUTH0_REDIRECT_URI=https://app.menuiq.io/callback

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_FLOWIQ=true
REACT_APP_ENABLE_MULTI_ITEM=true

# Public URL (for meta tags and social sharing)
# REACT_APP_PUBLIC_URL=https://yourdomain.com

# Google Analytics (optional)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# Development Tools (optional)
# REACT_APP_DEBUG_MODE=false
# REACT_APP_SHOW_DEV_TOOLS=false